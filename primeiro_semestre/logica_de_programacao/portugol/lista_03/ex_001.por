/*Faça um algoritmo que receba dois números e exiba o resultado da uma soma.*/
programa
{
    
    funcao inicio()
    {
        real numeroUm, numeroDois, soma

        escreva("SOMA DE NÚMEROS")
        escreva("\nInforme o primero número: ")
        leia(numeroUm)
        escreva("Informe o segundo número: ")
        leia(numeroDois)
        limpa()

        soma = numeroUm + numeroDois

        escreva(numeroUm, " + ", numeroDois, " = ", soma)
        
    }
// Autor: umsimplesrodrigo
}
